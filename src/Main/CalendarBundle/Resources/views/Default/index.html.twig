<!DOCTYPE html>
<html>
    <head>
        <title>Calendar</title>
        {% javascripts
            "@jquery_js"
            "@moment_js"
            "@fullcalendar_js"
            "@MainCalendarBundle/Resources/public/js/*"
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% stylesheets
            "@fullcalendar_css"
            "@MainCalendarBundle/Resources/public/css/*"
        %}

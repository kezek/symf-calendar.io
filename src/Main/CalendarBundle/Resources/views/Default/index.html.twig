        {% endstylesheets %}
        <script>
            //inject application urls in the DOM via global variables
            var getEventsUrl = '{{ url("api_get_events") }}';
            var postEventUrl = '{{ url("api_post_event") }}';
            var putEventUrl = '{{ url("api_put_event") }}';
            var deleteEventUrl = '{{ url("api_delete_event") }}';
        </script>
    </head>
